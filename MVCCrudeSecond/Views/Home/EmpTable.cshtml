@model List<MVCCrudeSecond.Models.EmpModel>

@{
    ViewBag.Title = "EmpTable";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tables</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DataTables Advanced Tables
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Salary</th>
                                        <th>Mob</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th>City</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)

                                    {
                                        <tr class="odd gradeX">

                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@item.Salary</td>
                                            <td>@item.Mob</td>
                                            <td>@item.Email</td>
                                            <td>@item.Department</td>
                                            <td>@item.City</td>


                                            <td><a href="@Url.Action("Edit","Home", new {item.Id})"><i class="fa fa-edit fa-fw"></i></a></td>
                                            <td><a href="@Url.Action("Delete","Home", new {item.Id})"><i class="fa fa-trash fa-fw"></i></a></td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
    <!-- /.container-fluid -->
</div>

<script src="~/Scripts/AppJs/js/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>